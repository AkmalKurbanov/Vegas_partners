footer.footer
  .container
    .footer__top
      .logo
        a(href="#")
          img(src="https://useimg.xyz/vegas/logo.svg", alt="").logo_desktop
          img(src="https://useimg.xyz/vegas/logo_mobile.svg", alt="").logo_mobile
      .social
        ul
          each val, index in ['https://useimg.xyz/vegas/twit.svg', 'https://useimg.xyz/vegas/mail.svg', 'https://useimg.xyz/vegas/insta.svg']
            li
              a(href="#")
                img(src=val, alt="")
      .mail
        form(action="")
          .mail__input-wrap.input-wrap
            input(type="text" placeholder="enter your email")
            button(type="submit")
              img(src="https://useimg.xyz/vegas/mail.svg", alt="")
  .footer__bottom(style="background-image: url('https://useimg.xyz/vegas/footer_bg.jpg')")
    .footer__partners
      .footer__partners-slider
        .swiper-container.partners-js
          .swiper-wrapper
            each item in partnersLogo
              .swiper-slide 
                img(src=item.partnersImg  alt="") 
      .footer__partners-text
        p
          span Vegas partners 
          | affiliate program               