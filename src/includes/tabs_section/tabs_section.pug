.tabs_section.tabs
  .container
    .tabs__wrap
      ul.tabs__list
        each item in tabsItem
          li(class=item.active class=item.current)
            a(href='#')=item.menuItem 
      .tabs__content
        .tabs__mob-wrap
          .tabs__mob-nav    
            ul
              each item in tabsMobItem
                li(class=item.active class=item.current)
          .tabs__mob
            .tabs__mob-arrow
            .tabs__mob-hamburger
              i
              i
              i
            each item in tabsItemContent
              .tabs__item(class=item.current)
                h2.tabs__title=item.title 
                .tabs__item-img
                  img(src=item.img, alt="")
                .tabs__item-content 
                  h2.tabs__title=item.titleSecond 
                  p=item.text 
                  a(href="#").btn.registration-js registration
              
      
    
